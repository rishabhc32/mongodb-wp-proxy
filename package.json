{
  "name": "mongodb-wp-proxy",
  "version": "1.0.2",
  "description": "A logging mongodb wire protocol proxy",
  "keywords": [
    "mongodb",
    "wire",
    "protocol"
  ],
  "homepage": "https://github.com/mongodb-labs/mongodb-wp-proxy",
  "repository": {
    "type": "git",
    "url": "https://github.com/mongodb-labs/mongodb-wp-proxy.git"
  },
  "bugs": {
    "url": "https://github.com/mongodb-labs/mongodb-wp-proxy/issues"
  },
  "main": "lib/index.js",
  "bin": {
    "mongodb-wp-proxy": "bin/mongodb-wp-proxy.js"
  },
  "exports": {
    "require": "./lib/index.js",
    "import": "./.esm-wrapper.mjs"
  },
  "files": [
    "LICENSE",
    "bin",
    "lib",
    "package.json",
    "README.md",
    ".esm-wrapper.mjs"
  ],
  "scripts": {
    "lint": "eslint {src,test}/**/*.ts",
    "testonly": "mongodb-runner exec -t standalone -- nyc mocha --colors -r ts-node/register test/*.ts",
    "test": "npm run lint && npm run build && npm run testonly",
    "build": "npm run compile-ts && gen-esm-wrapper . ./.esm-wrapper.mjs",
    "prepack": "npm run build",
    "compile-ts": "tsc -p tsconfig.json"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "bson": "^6.10.4"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^7.9.0",
    "eslint-config-semistandard": "^15.0.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "gen-esm-wrapper": "^1.1.0",
    "mocha": "^8.1.3",
    "mongodb": "^6.19.0",
    "mongodb-runner": "^5.9.2",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
